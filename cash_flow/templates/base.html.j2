<!DOCTYPE html> 
<html lang="pt-BR" class="">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/htmx.org@2.0.2"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
        };
    </script>
    <script>
        // Aplica o tema salvo no localStorage antes de carregar o body
        if (localStorage.getItem('theme') === 'dark') {
            document.documentElement.classList.add('dark');
        }
    </script>
    <script src="https://kit.fontawesome.com/20415dd511.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Montserrat:wght@400;600&display=swap" rel="stylesheet">

    <style>
    body {
        font-family: 'Montserrat', sans-serif;
    }
    .title{
        font-family: 'Libre Baskerville', serif;
    }
    </style>
</head>

<body>
<main class="min-h-screen min-w-screen">
{% if not clean %}
    {% include 'components/aside.html.j2' %}
    {% include 'components/nav.html.j2' %}

{% endif %}

<div {% if not clean %}
 class="p-4 sm:ml-64 mt-16" {% endif %}> 

{% block body %}

{% endblock %}
</div>

</main>
</body>

<script>
    const toggleButton = document.getElementById('toggleTheme');

    toggleButton.addEventListener('click', () => {
        const html = document.documentElement;
        const isDark = html.classList.toggle('dark');

        localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
</script>
</html> 